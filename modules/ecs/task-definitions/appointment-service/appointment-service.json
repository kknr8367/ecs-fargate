{
    "family": "appointment-service-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "${aws_iam_role.ecs_execution_role.arn}",
    "containerDefinitions": [
      {
        "name": "appointment-service",
        "image": "your-ecr-repo/appointment-service:latest",
        "essential": true,
        "portMappings": [
          {
            "containerPort": 8080,
            "hostPort": 8080
          }
        ]
      }
    ]
  }
  